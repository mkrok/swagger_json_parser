{
  "compilerOptions": {  
    "checkJs": true,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "es2016",
      "dom"
    ],
    "types": ["jest", "node", "webpack-env"]
  },
  "include": [
    "./src/**/*",
  ],
}